[flake8]
max-line-length = 120
exclude = .git,__pycache__,.venv,build,dist,PySimpleGUI.py,player.py
ignore = W504
# E402: module level import not at top of file - OK in tests that modify sys.path
# E501: line too long - OK in tests for readability
# F541: f-string without placeholders - OK in tests
# W504: line break after binary operator - conflicts with W503
per-file-ignores =
    tests/*.py:E402,E501,F541
    src/main.py:E402

